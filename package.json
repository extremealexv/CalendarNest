{
  "name": "famsync-kiosk",
  "version": "1.0.0",
  "description": "Family Calendar Kiosk App - React + Electron for Ubuntu touchscreen displays",
  "homepage": ".",
  "main": "public/electron.js",
  "private": true,
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "dist-linux": "electron-builder --linux AppImage --arm64",
    "lint": "eslint --ext .js,.jsx src/"
  },
  "author": "",
  "build": {
    "appId": "com.famsync.kiosk",
    "productName": "FamSync Kiosk",
    "linux": {
      "target": ["AppImage"],
      "category": "Office",
      "icon": "build/icons"
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "react-router-dom": "^6.8.1",
    "electron-is-dev": "^2.0.0",
    "qrcode": "^1.5.3",
    "jsqr": "^1.4.0",
    "axios": "^1.3.4",
    "date-fns": "^2.29.3",
    "process": "^0.11.10",
    "buffer": "^6.0.3",
    "js-sha256": "^0.10.0"
  },
  "devDependencies": {
    "electron": "^23.1.2",
    "electron-builder": "^23.6.0",
    "concurrently": "^7.6.0",
    "wait-on": "^7.0.1",
    "react-app-rewired": "^2.2.1"
  }
  ,"browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}