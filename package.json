{
  "name": "famsync-kiosk",
  "version": "1.0.0",
  "description": "Family Calendar Kiosk App - React + Electron for Ubuntu touchscreen displays",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "electron-builder",
    "preelectron-pack": "npm run build",
    "dist": "npm run build && electron-builder --publish=never",
    "dist-linux": "npm run build && electron-builder --linux --publish=never",
    "dist-fast": "npm run build && electron-builder --linux --dir",
    "dist-noasar": "npm run build && electron-builder --config electron-builder.noasar.yml --linux --publish=never"
  },
  "build": {
    "appId": "com.famsync.kiosk",
    "productName": "FamSync Kiosk",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Office",
      "executableName": "famsync-kiosk"
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "react-router-dom": "^6.8.1",
    "electron-is-dev": "^2.0.0",
  "dotenv": "^16.1.4",
    "gapi-script": "^1.2.0",
    "qrcode": "^1.5.3",
    "jsqr": "^1.4.0",
    "axios": "^1.3.4",
    "date-fns": "^2.29.3",
    "styled-components": "^5.3.9",
    "@google/generative-ai": "^0.1.3"
  },
  "devDependencies": {
    "electron": "^23.1.2",
    "electron-builder": "^23.6.0",
    "concurrently": "^7.6.0",
    "wait-on": "^7.0.1",
    "react-app-rewired": "^2.2.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "typescript": "^4.9.5"
  },
  "optionalDependencies": {
    "js-sha256": "^0.10.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}